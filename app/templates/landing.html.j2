{% extends "baseWH.html" %}
{%block title%}Home{%endblock%}
{%block content%}
<style>
  .parallax {
    /* The image used */
    background-image: url("{{url_for('static', filename='/css/img/paralax.jpg')}}");

    /* Set a specific height */
    height: 1000px;

    /* Create the parallax scrolling effect */
    background-attachment: fixed;
    background-position: bottom;
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>


<div class="container-fluid">
  <div class="row border border-primary">
    <div class="col p-0 text-white text-light">
      <div class="parallax-window text-center m-0 d-flex flex-column justify-content-center" data-parallax="scroll"
        data-image-src="static/css/img/paralax.jpg" alt='Landscaping'>
        <span class="bg-transdark pt-3 my-5">
          <h1 class="display-1">Wurk Services</h1>
            <h2>Anyone you need</h2>
            <script async src="https://cse.google.com/cse.js?cx=eb9298b31cbdafa2b"></script>
            <div class="gcse-search"></div> 
            <h3>Right at your fingertips</h3>
        </span>
      </div>
    </div>
  </div>
</div>
<!--Services Loop -->
<div class="container-fluid overflow-hidden">
  <div class="row mb-5 mx-5 align-items-center p-3">
      <div class="col-md">
      <h1 class="display-4" id="{{types[0][0].replace(' ','-').lower()}}">{{types[0][0]}}</h1>
      <p class="lead">{{types[0][1]}}</p>
      <div class="card-deck">
        {%for k in listofservices%}
        {%if "break" in k%}
      </div>
</div>
</div>
<div class="container-fluid overflow-hidden">
    <div class="row mb-5 mx-5 align-items-center p-3">
      {%if not "breaknotitle" in k%}
      {%set k = k[-1]%}
      <div class="col-md">

        <h1 class="display-4"id="{{types[k|int][0].replace(' ','-').lower()}}">{{types[k|int][0]}}</h1>
        <p class="lead">{{types[k|int][1]}}</p>
        {%endif%}
        <div class="card-deck">
          {%else%}
          <div class="card text-dark shadow shadow-lg border border-primary mb-4" style="min-width: 20rem;  max-width: 30rem; word-wrap: normal;" data-aos="fade-right" data-aos-duration="1000">
            <img class="card-img-top border border-primary" src="{{ url_for('static', filename='css/img/' + k + '.jpg') }}" alt="{{k}}">
            <div class="card-body">
              <h5 class="card-title">{{k}}</h5>
            </div>
            <div class="card-footer bg-white">
              {%set k = k.replace(" ", "-")%}
              {%if k == 'Lawn-Care'%}
              <a href="/landscaping" class="btn btn-outline-primary stretched-link text-center">Learn More</a>
              {%elif k == 'Tutoring'%}
              <a href="/tutoring" class="btn btn-outline-primary stretched-link text-center">Learn More</a>
              {%else%}
              <a href="/services/{{k}}-barrington-il" class="btn btn-outline-primary stretched-link text-center">Learn More</a>
              {%endif%}
            </div>
          </div>
          {%endif%}
          {%endfor%}
    </div>
  </div>
</div>
</div>
</body>
{%endblock%}